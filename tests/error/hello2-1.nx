fun odd(integer: int): int =
    if integer = 1 then
        1
    else
        even (integer - 1)
fun even(integer: int): int =
    if integer = 0 then
        1
    else
        odd (integer - 1)
fun fib(integer: int): int =
    if integer = 0 then
        1
    else if integer = 1 then
        1
    else
        fib (integer - 1) + fib (integer - 2)
